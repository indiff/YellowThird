<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/headIv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="10dip"
            android:scaleType="fitCenter"
            android:src="@drawable/author_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="大鸡鸡"
                    android:textColor="#8290AF"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/contentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:text="一老外在中国农村迷了路,看到一青年在田里插秧,就用生硬的中文问路,结果青年半天没听懂,最后青年说:CanyouspeakEnglish?老外大惊,于是用英文问了路,"
                android:textColor="#232323"
                android:textSize="14sp" />

            <!--图片略缩图集合-->
            <com.pear.android.view.MultiImageView
                android:id="@+id/multi_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

            <!--发表时间-->
            <TextView
                android:id="@+id/time"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="13分钟前"
                android:textColor="@color/colorMinorContent"
                android:textSize="12sp" />

            <!-- 浏览次数 、 评论 点赞、-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!--浏览次数-->
                <TextView
                    android:id="@+id/browse_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="浏览52次"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorMinorContent"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    >
                    <!--点击进行评论-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:adjustViewBounds="true"
                        android:maxWidth="9999dp"
                        android:gravity="center_vertical"
                        android:src="@drawable/_friend_tip_comment" />

                    <!--点赞和器数量数量-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="18dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <!--点赞-->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:adjustViewBounds="true"
                            android:maxWidth="9999dp"
                            android:src="@drawable/click_good" />

                        <!--点赞数量-->
                        <TextView
                            android:id="@+id/good_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:text="2048"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorMinorContent"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <com.pear.android.view.LinearLayoutLikeListView
                android:id="@+id/comment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#f3f3f5"
                />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>